{% extends "base.html.twig" %}

{% block header %}
    <div class="position-relative">
        <img src="{{ content.jumbotron_image.url }}" class="img-fluid" alt="TODO">
        <nav class="navbar navbar-expand navbar-light position-absolute top-menu-position start-menu-position">
            <div class="container-fluid">
                <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#leftMenu">
                    <span class="bi bi-list display-6"></span>
                </button>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link display-6" href="{{ sulu_content_root_path() }}">Homepage</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link display-6" href="#">About</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="leftMenu">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Offcanvas</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <div>
                Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
            </div>
            <div class="dropdown mt-3">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown">
                    Dropdown button
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="#">Action</a></li>
                    <li><a class="dropdown-item" href="#">Another action</a></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <form action="{{ path('sulu_search.website_search') }}" method="GET" class="container-fluid mt-5">
        <div class="input-group mb-3 input-group-lg">
            <input name="q" type="text" placeholder="{{ content.search_bar_placeholder }}" class="form-control" aria-describedby="search_button"/>
            <button class="btn btn-outline-secondary" type="submit" id="search_button">{{ content.search_button_text }}</button>
        </div>
    </form>
    {{ dump() }}
{% endblock %}