<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage</key>

    <view>pages/homepage</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>

    <meta>
        <title lang="en">Homepage</title>
        <title lang="fr">Accueil</title>
        <title lang="fr_fr">Accueil</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="fr">Titre</title>
                <title lang="fr_fr">Titre</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="fr">Uri</title>
                <title lang="fr_fr">Uri</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>
        
        <property name="search_bar_placeholder" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Placeholder in Search bar</title>
                <title lang="fr">Placeholder dans la barre de recherche</title>
                <title lang="fr_fr">Placeholder dans la barre de recherche</title>
            </meta>
        </property>

        <property name="search_button_text" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Search button text</title>
                <title lang="fr">Texte du bouton Rechercher</title>
                <title lang="fr_fr">Texte du bouton Rechercher</title>
            </meta>
        </property>
    </properties>
</template>
